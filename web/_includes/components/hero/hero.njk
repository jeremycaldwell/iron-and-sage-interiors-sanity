{# Styling #}
{% set css %}{% include "_site/dist/css/components/hero.css" %}{% endset %}
<style>{{ css | cssmin | safe }}</style>

{# Markup #}
<section class="hero">
  <header class="hero__content">
    <h3 class="hero__title">{{ component.heading }}</h3>
    <h4 class="hero__tagline">{{ component.tagline }}</h4>
  </header>
  <div class="hero__image"><img src="{% imageUrlFor component.image, '750' %}" /></div>
</section>
