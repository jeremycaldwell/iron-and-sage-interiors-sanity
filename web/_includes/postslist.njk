<section class="blog-teaser">
  {% for post in postslist | reverse %}
    {% set blogPost = post.data.post %}
    <div class="blog-teaser__row">
      <article class="node">
        <div class="blog-teaser__image">
          <div class="blog-teaser__image-container">
            <a href="{{ post.url | url }}" class="blog-teaser__image-link">
              <img src="{% croppedUrlFor blogPost.mainImage, 960, 440, 100 %}" alt="{{ blogPost.mainImage.alt }}">
            </a>
          </div>
        </div>
        <div class="blog-teaser__container">
          <div class="blog-teaser__inner">
            <div class="blog-teaser__content">
              <h2 class="blog-teaser__title"><a href="{{ post.url | url }}">{% if blogPost.title %}{{ blogPost.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h2>
              <div class="blog-teaser__meta"><time datetime="{{ blogPost.publishedAt }}">{{ blogPost.publishedAt|readableDate }}</time></div>
              {{ blogPost.excerpt | markdownify | safe }}
            </div>
          </div>
        </div>
      </article>
    </div>
  {% endfor %}
</section>
